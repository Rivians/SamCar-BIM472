@using SamCar472.Application.Features.Mediator.Results.BlogResults
@model List<GetAllBlogsWithAuthorsQueryResult>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="/frontend/css/blog-list.css">
    <link rel="stylesheet" href="/frontend/css/navbar.css">
    <link rel="stylesheet" href="/frontend/css/footer.css">
    <link rel="stylesheet" href="/frontend/css/fonts.css">

</head>
<body>

    <header>
        <nav>
            <div class="row navbar navbar-expand-md my-navbarr">
                <div class="container">
                    <div class="navbar-brand col-md-3">
                        <a href="/Default/Index/"><img src="/frontend/images2/rent-a-car-logo2.png" width="100%"></a>
                        <a href="/Default/Index/"><p><b>SAM CAR</b></p></a>
                    </div>

                    <div class="navbar-main col-md-6">
                        <div class="navbar-item-list">
                            <ul class="navbar-nav">
                                <li class="nav-item"><a href="/Default/Index/">Ana Sayfa</a></li>
                                <li class="nav-item"><a href="/Blog/Index/">Bloglar</a></li>
                                <li class="nav-item"><a href="/About/Index/">Hakkımızda</a></li>
                                <li class="nav-item"><a href="/Contact/Index/">İletişim</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="navbar-login-register col-md-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <button type="button" style="color:white" class="btn dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa-solid fa-user" style="color: #f5f5f5;"></i>
                                    <strong style="color: white;">@User.Identity.Name</strong>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Profilimi Göster</a>
                                    <a class="dropdown-item" href="/Default/Index/">Siteye Git</a>
                                    <a class="dropdown-item" href="/Logout/Index/">Çıkış Yap</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="login-register-item-list">
                                <ul class="navbar-nav">
                                    <li class="nav-item"><a href="/Login/Index/">Giriş Yap</a></li>
                                    <li class="nav-item"><a href="/Register/Index/">Kayıt Ol</a></li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <div class="container">
            <div class="blog-list-title mt-5 mb-5">
                <h1>Yazarlarımızın Blogları</h1>
            </div>

            <div class="card-container" style="padding: 20px;">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-md-4">
                            <div class="card mt-3 ">
                                <a href="/Blog/BlogDetail/@item.BlogID"><img src="@item.CoverImageUrl" class="card-img-top" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">@item.Title</h4>
                                    <p class="card-text">@item.ShortDescription</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">yüklenme tarihi : @item.CreatedTime</small>
                                    <br>
                                    <small class="text-muted">Yazar : @item.AuthorName</small>
                                </div>
                            </div>
                        </div>
                    }

                </div>

            </div>      
        </div>
    </main>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-3 footer-1 ">
                    <a href="blog-detail-1.html"><img src="/images/rent-a-car-logo2.png"></a>
                    <br>
                    <p>Her ihtiyacınıza uygun geniş araç yelpazemizle, konforlu ve güvenli yolculuklar için en iyi araç kiralama çözümlerini sunuyoruz.</p>
                    <br>
                    <div class="footer-social-medias">
                        <a href="https://www.facebook.com/?locale=tr_TR"><i class="fa-brands fa-facebook"></i></a>
                        <a href="https://x.com/i/flow/login"><i class="fa-brands fa-square-x-twitter"></i></a>
                        <a href="https://www.instagram.com/"><i class="fa-brands fa-square-instagram"></i></a>
                        <a href="#"><i class="fa-brands fa-google"></i></a>
                    </div>
                </div>
                <div class="col-md-3 footer-2 ">
                    <h5>Hızlı Linkler</h5>
                    <p>Hakkımızda</p>
                    <p>Hizmetlerimiz</p>
                    <p>Şartlar & Koşullar</p>
                    <p>Güvenlik</p>
                    <p>Çerez Politikası</p>
                </div>
                <div class="col-md-3 footer-3 ">
                    <h5>Müşteri Desteği</h5>
                    <p>Sıkça Sorularnlar</p>
                    <p>Ödeme Yöntemleri</p>
                    <p>Kiralama</p>
                    <p>Nasıl Çalışır</p>
                    <p>Çerez Politikası</p>
                </div>
                <div class="col-md-3 footer-4 ">
                    <h5>Bir Sorunuz Mu Var ?</h5>

                    <i class="fa-solid fa-location-dot" style="color: #e5e0e5;"></i>
                    <p>  203 Fake St. Mountain View, San Francisco, California, USA</p>
                    <i class="fa-solid fa-phone" style="color: #eff1f6;"></i>
                    <p>+2 392 3929 210</p>
                    <i class="fa-solid fa-envelope" style="color: #d8dee8;"></i>
                    <p>random@gmail.com</p>
                </div>
            </div>
        </div>
    </footer>


</body>
</html>