@using SamCar472.Dto.LoginDtos
@model ResultLoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/frontend/css/login-register.css">
</head>
<body>
    <main>
        <div class="container login-register-flex">
            <div class="row both-side">
                <div class="col-md-5 left-side">
                    <!-- sol taraftaki görsel -->
                    <div class="login-register-image-container">
                        <img src="~/frontend/images2/login-register-image3-m4.jpg" alt="">
                    </div>
                </div>
                <div class="col-md-7 right-side">
                    <!-- sağ taraftaki form -->
                    <div class="login-register-form">
                        <div class="form-title">
                            <h5>CarBook Müşteri Giriş Sayfası</h5>
                        </div>
                        <div class="form-description">
                            <h4>Hoşgeldiniz!</h4>
                        </div>
                        <br>
                        <div class="form-body-main">
                            <form method="post">
                                <input type="text" asp-for="Username" class="form-control" placeholder="Kullanıcı Adınız">
                                <br>
                                <input type="password" asp-for="Password" class="form-control" placeholder="Şifreniz">
                                <br>
                                <button type="submit" class="btn btn-success" style="width: 100%;">Giriş Yap</button>
                            </form>
                        </div>
                        <div class="form-password-forget">
                            <p id="p1">Şifrenizi mi unuttunuz?</p>
                            <p id="p2">Bir hesabınız yok mu? <a href="/Register/Index/"><b>Bir Hesap Oluştur</b></a></p>
                        </div>
                        <div class="form-body-socialmedias">
                            <a href="https://www.facebook.com/?locale=tr_TR"><i class="fa-brands fa-facebook"></i></a>
                            <a href="https://x.com/i/flow/login"><i class="fa-brands fa-square-x-twitter"></i></a>
                            <a href="https://www.instagram.com/"><i class="fa-brands fa-square-instagram"></i></a>
                            <a href="#"><i class="fa-brands fa-google"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>
