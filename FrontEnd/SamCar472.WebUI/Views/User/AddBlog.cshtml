    <link rel="stylesheet" href="/frontend/css/fonts.css">
    <link rel="stylesheet" href="/frontend/css/navbar.css">
    <link rel="stylesheet" href="/frontend/css/admin-panel.css">
</head>
<body>

    <header>
        <nav>
            <div class="navbarrr">
                <div class="row navbar navbar-expand-lg my-navbarr">
                    <div class="navbar-brand col-md-3">
                        <a href="home.html"><img src="/frontend/images2/rent-a-car-logo2.png" width="100%"></a>
                        <a href="home.html"><p><b>SAM CAR</b></p></a>
                    </div>
                    <div class="navbar-main col-md-6"></div>
                    <div class="navbar-login-register col-md-3">
                        <div class="dropdown">
                            <button style="color:white" type="button" class="btn dropdown-toggle" data-toggle="dropdown">
                                <i class="fa-solid fa-user" style="color: #f5f5f5;"></i>
                                <strong style="color: white;">@User.Identity.Name</strong>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Profilimi Göster</a>
                                <a class="dropdown-item" href="/Default/Index/">Siteye Git</a>
                                <a class="dropdown-item" href="/Logout/Index/">Çıkış Yap</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="row">
        <div class="left-sidebar col-md-2">
            <ul>
                <li><a href="/User/Profile/">Profil Bilgilerim</a></li>
                <li><a href="/User/BlogList/">Bloglarım</a></li>
                <li><a href="/User/CommentList/">Gelen Yorumlar</a></li>
            </ul>
        </div>

        <div class="content col-md-10 ">
            <div class="main-content">
                <div class="admin-page-title">
                    <h5>Blog Ekleme Sayfası</h5>
                </div>
                <div class="update-blog-form">
                    <form method="post">
                        <label class="form-control" style="color:black; font-size:large">Blog Başlığı</label>
                        <input type="text" asp-for="Title" class="form-control" id="form" placeholder="Başlık">
                        </br>
                        <label class="form-control" style="color:black; font-size:large">Kısa Açıklama</label>
                        <input type="text" asp-for="ShortDescription" class="form-control" placeholder="Kısa Açıklama">
                        </br>
                        <label class="form-control" style="color:black; font-size:large">Blog Yazısı</label>
                        <textarea class="form-control" asp-for="@Model.Description" rows="7"></textarea>
                        </br>
                        @*                         <label class="form-control" style="color:black; font-size:large">Blog Kategorisi</label>
                        <input type="text" name="categoryName" value="@Model." class="form-control" placeholder="Kısa Açıklama">
                        </br> *@
                        <label class="form-control" style="color:black; font-size:large">Resim Dosya Adresi</label>
                        <input type="text" asp-for="CoverImageUrl" class="form-control" placeholder="Resim dosya adresi">
                        </br>
                        <input id="submit-button" type="submit" class="btn btn-primary" value="Bloğu Ekle">
                    </form>
                </div>
            </div>

        </div>
