@using SamCar472.Application.Features.Mediator.Results.BlogResults
@model List<GetUserBlogListByUsernameQueryResult>

@{
    Layout = null;
    int count = 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/frontend/css/fonts.css">
    <link rel="stylesheet" href="/frontend/css/navbar.css">
    <link rel="stylesheet" href="/frontend/css/admin-panel.css">
</head>
<body>

    <header>
        <nav>
            <div class="navbarrr">
                <div class="row navbar navbar-expand-lg my-navbarr">
                    <div class="navbar-brand col-md-3">
                        <a href="home.html"><img src="/frontend/images2/rent-a-car-logo2.png" width="100%"></a>
                        <a href="home.html"><p><b>SAM CAR</b></p></a>
                    </div>
                    <div class="navbar-main col-md-6"></div>
                    <div class="navbar-login-register col-md-3">
                        <div class="dropdown">
                            <button style="color:white" type="button" class="btn dropdown-toggle" data-toggle="dropdown">
                                <i class="fa-solid fa-user" style="color: #f5f5f5;"></i>
                                <strong style="color: white;">@User.Identity.Name</strong>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Profilimi Göster</a>
                                <a class="dropdown-item" href="/Default/Index/">Siteye Git</a>
                                <a class="dropdown-item" href="/Logout/Index/">Çıkış Yap</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="row">
        <div class="left-sidebar col-md-2">
            <ul>
                <li><a href="/User/Profile/">Profil Bilgilerim</a></li>
                <li><a href="/User/BlogList/">Bloglarım</a></li>
                <li><a href="/User/CommentList/">Gelen Yorumlar</a></li>
            </ul>
        </div>

        <div class="content col-md-10 border">
            <div class="main-content border">
                <div class="admin-page-title">
                    <h5>Kullanıcı Blog Yönetim Paneli</h5>
                </div>
                <div class="admin-blog-table">
                    <table class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Blog Resmi</th>
                                <th>Blog Adı</th>
                                <th>Kategori</th>
                                <th>Yorum Sayısı</th>
                                <th>Eklenme Tarihi</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.CoverImageUrl</td>
                                    <td>@item.Title</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.CommentCount</td>
                                    <td>@item.CreatedTime</td>              
                                    <td><a href="/User/UpdateBlog/@item.BlogID" class="btn btn-info"> Güncelle </a></td>
                                    <td><a href="/User/RemoveBlog/@item.BlogID" class="btn btn-danger"> Sil </a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="add-blog-button">
                        <a href="/User/AddBlog/" class="btn btn-primary">Blog Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>