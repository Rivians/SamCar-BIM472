@using SamCar472.Application.Features.Mediator.Results.AppUserResults
@model GetUserInfosQueryResult

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/frontend/css/fonts.css">
    <link rel="stylesheet" href="/frontend/css/navbar.css">
    <link rel="stylesheet" href="/frontend/css/admin-panel.css">
</head>
<body>

    <header>
        <nav>
            <div class="navbarrr">
                <div class="row navbar navbar-expand-lg my-navbarr">
                    <div class="navbar-brand col-md-3">
                        <a href="home.html"><img src="/frontend/images2/rent-a-car-logo2.png" width="100%"></a>
                        <a href="home.html"><p><b>SAM CAR</b></p></a>
                    </div>
                    <div class="navbar-main col-md-6"></div>
                    <div class="navbar-login-register col-md-3">
                        <div class="dropdown">
                            <button style="color:white" type="button" class="btn dropdown-toggle" data-toggle="dropdown">
                                <i class="fa-solid fa-user" style="color: #f5f5f5;"></i>
                                <strong style="color: white;">@User.Identity.Name</strong>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Profilimi Göster</a>
                                <a class="dropdown-item" href="/Default/Index/">Siteye Git</a>
                                <a class="dropdown-item" href="/Logout/Index/">Çıkış Yap</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="row">
        <div class="left-sidebar col-md-2">
            <ul>
                <li><a href="/User/Profile/">Profil Bilgilerim</a></li>
                <li><a href="/User/BlogList/">Bloglarım</a></li>
                <li><a href="/User/CommentList/">Gelen Yorumlar</a></li>
            </ul>
        </div>

        <div class="content col-md-10">
            <div class="main-content" style="padding:20px; background-color: #edf2f7; border-radius:20px">
                <div class="admin-page-title">
                    <h5>Kullanıcı Profil Düzenleme Sayfası</h5>
                </div>
                <div class="admin-profile-edit mt-4">
                    <div class="row">
                        <div class="col-md-8 form-side">
                            <form method="post">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" for="">Ad</label>
                                    <input type="text" asp-for="Name" class="form-control col-md-5" value="@Model.Name">
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" for="">Soyad</label>
                                    <input type="text" asp-for="Surname" class="form-control col-md-5" value="@Model.Surname">
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" for="">Kullanıcı Adı</label>
                                    <input type="text" asp-for="Username" class="form-control col-md-5" value="@Model.Username">
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" for="">Email</label>
                                    <input type="email" asp-for="Email" class="form-control col-md-5" value="@Model.Email">
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" for="">Şifre</label>
                                    <input type="text" asp-for="Password" class="form-control col-md-5" value="@Model.Password">
                                </div>
                                <div class="update-button">
                                    <button type="submit" href="/Admin/UpdateProfile" class="btn btn-success">
                                        Kaydet
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-4 image-side">
                            <div class="image">
                                <img src="@Model.CoverImageUrl" alt="">
                                <br>
                                <input type="file" asp-for="CoverImageUrl" style="text-align: center; display: inline-block;" value="@Model.CoverImageUrl">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        </div>
    </div>
    </div>

</body>
</html>